<%= simple_form_for(@winery) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :website %>
    <%= f.input :image %>
    <%= f.input :phone_number %>
    <%= f.input :visitors %>
    <%= f.input :tours %>
    <%= f.input :pets %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
